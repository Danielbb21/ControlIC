@model IEnumerable<ControlIC.Models.Usuario>

@{
    ViewData["Title"] = "Personal Network";
}

<style>
    .vertice {
        width: 50px;
        height: 50px;
        border-radius: 200px;
        position: absolute;
        background-color: blue;
    }
</style>


<form asp-action="RedeEgo">
    <div id="JanelaUsuarios" style="width:100%; height:100%">
        @foreach (var usuario in Model)
        {
            @if (usuario.TipoUsuario != 3)
            {
                <button asp-action="RedeEgoNucleo" asp-route-id="@usuario.ID" style="width:50px; margin:10px ;height:50px; border-radius:200px; background-color:blue">
                    @usuario.Nome
                </button>
            }
        }
    </div>
</form>


<script>

    var GerarLigacoes = function (event) {
        var janela = document.getElementById("JanelaUsuarios");
        janela.style.display = "none";

        var nucleo = document.createElement("div");
        nucleo.className = "vertice";

        nucleo.style.top = "50%";
        nucleo.style.left = "50%";

        var Rede = document.getElementById("Rede");
        Rede.appendChild(nucleo);

        console.log(nucleo.offsetTop);
        console.log(nucleo.offsetLeft);
    };

</script>