@{
    ViewBag.Title = "Confirme o endereço de email enviado";
}
<h2>@ViewBag.Title.</h2>

<div class="row">
    <div class="col-md-8">
        @if (TempData["Erro"] != null)
        {
            @TempData["Erro"]
        }
        else
        {
            <label>Por favor, cheque o email enviado para o endereço @ViewBag.Email.</label>
        }
    </div>
</div>  