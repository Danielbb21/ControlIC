@model ControlIC.Models.Usuario

@{
    ViewData["Title"] = "Personal Network";
}

<style>
    .vertice {
        width: 50px;
        height: 50px;
        border-radius: 200px;
        position: absolute;
        background-color: blue;
    }
</style>

<div id="Rede" style="width:100%; height:100%;">
    <div id="Nucleo" class="vertice"></div>
</div>

<script>

    var GerarLigacoes = function (event) {
        var janela = document.getElementById("JanelaUsuarios");
        janela.style.display = "none";

        var nucleo = document.createElement("div");
        nucleo.className = "vertice";

        nucleo.style.top = "50%";
        nucleo.style.left = "50%";

        var Rede = document.getElementById("Rede");
        Rede.appendChild(nucleo);

        console.log(nucleo.offsetTop);
        console.log(nucleo.offsetLeft);
    };

</script>