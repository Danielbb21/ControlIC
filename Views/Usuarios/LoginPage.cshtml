@model ControlIC.Controllers.UsuariosController.InputModel

@{
    ViewData["Title"] = "LoginPage";
}

<style>
    span {
        color: red;
        float: left;
        margin-top: 1%;
        margin-left: 1%;
    }
</style>

<br>
<center>
    <h1>Login</h1>
    <br>
    @if (ViewBag.Erro != null)
    {
        <h5 style="padding: 5px; color: red; ">
            @ViewBag.Erro
        </h5>
    }
    <br>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <fieldset style="width: 40%;">
            <br />
            <input type="text" class="form-control" name="Email" placeholder="Digite seu email..." />
            @Html.ValidationMessageFor(model => model.Email)
            <br />
            <br />
            <br />
            <input type="password" class="form-control" name="Senha" placeholder="Digite sua senha..." />
            @Html.ValidationMessageFor(model => model.Senha)
            <br />
            <br />
            <br />
            <button type="submit" class="btn btn-primary" style="background-color: mediumseagreen; border: none;"> Logar</button>
            <br />
            <label>Não é cadastrado ainda? </label>
            <br />
            <a class="btn btn-primary" asp-area="" asp-controller="Usuarios" asp-action="EscolhaTipo" style="background-color: mediumseagreen; border: none;">
                Cadastre-se aqui
            </a>
            <br />
            <br />
            <a class="btn btn-primary" asp-area="" asp-controller="Usuarios" asp-action="IniciarRecuperarSenha">
                Esqueceu a senha?
            </a>

            <br /><br />


        </fieldset>
    }
</center>