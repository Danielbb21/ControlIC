@model ControlIC.Models.Atividade

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Atividade</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Texto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Texto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataPrevista)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataPrevista)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Restricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Restricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cor)
        </dt>
        <dd class="col-sm-10">
            <label style="background-color: rgb(@Model.Cor); border:solid #262626 1px; padding: 12px; border-radius: 200px;" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Projeto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Projeto.ID)
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Name")
                </th>
                <th>
                    @Html.DisplayName("E-mail")
                </th>
            </tr>
        </thead>

        @foreach (var item in Model.Participantes)
        {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
        </tr>
        }
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
