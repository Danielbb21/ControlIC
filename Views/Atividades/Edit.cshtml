@model ControlIC.Models.Atividade

<h1>Editar Atividade</h1>

<h4>Atividade: @Model.Titulo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Titulo" class="control-label">Título </label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Texto" class="control-label">Texto </label>
                <input asp-for="Texto" class="form-control" style="height:100px; resize: none" />
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataPrevista" class="control-label"> Data de Entrega</label>
                <input asp-for="DataPrevista" class="form-control" />
                <input type="hidden" asp-for="Cor" />
                <input type="hidden" asp-for="ProjetoID" />
                <span asp-validation-for="DataPrevista" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Restricao" />Documento público?
                </label>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a class="btn btn-info" asp-action="Index" asp-route-id="@Model.ProjetoID">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
