@model ControlIC.Models.Atividade


<h1>Exclusão de Atividade</h1>
<div>
    <h4>Atividade</h4>
    <hr/>
    <dl class="row">
        <dt class = "col-sm-2">
            Título
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            Texto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Texto)
        </dd>
        <dt class = "col-sm-2">
            Data de entrega
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataPrevista)
        </dd>
        <dt class = "col-sm-2">
            Documentos Publicos?
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Restricao)
        </dd>
        <dt class = "col-sm-2">
            Projeto Relacionado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Projeto.Nome)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> 
        <a class="btn btn-primary" asp-action="Index" asp-route-id="@Model.ProjetoID">Voltar</a>
    </form>
</div>
