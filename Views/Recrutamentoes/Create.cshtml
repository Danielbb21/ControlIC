@model ControlIC.Models.Recrutamento

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Recrutamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <input type="hidden" asp-for="ProjetoID"/>
            <input type="hidden" asp-for="DataPostagem" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label">Descrição:</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkExterno" class="control-label">Link Externo:</label>
                <input asp-for="LinkExterno" class="form-control" />
                <span asp-validation-for="LinkExterno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArquivoFormato" class="control-label">Edital:</label>
                <input type="file" accept="application/pdf" asp-for="ArquivoFormato" />
                <span asp-validation-for="ArquivoFormato" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="status" /> Status
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
