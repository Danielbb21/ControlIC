@model ControlIC.Models.Projeto

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Projeto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OutrasInformacoes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OutrasInformacoes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Aprovado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Aprovado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CampoPesquisa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CampoPesquisa.ID)
        </dd>
    </dl>

    @if (int.Parse(User.Claims.ElementAt(3).Value) == Model.UsuarioID)
    {
        <form asp-action="Details">
            <input type="hidden" asp-for="Aprovado"/>
            <label>Convidar Usuario:</label>
            <input type="email" class="form-control" asp-for="EmailConvite" />
            <br />
            <button type="submit" class="btn-primary">Enviar</button>
        </form>
    }

    @if (TempData["Aviso"] != null)
    {
        <label style="color:red">@TempData["Aviso"].ToString()</label>
    }

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
